{
  "manifest_version": 3,
  "name": "MainGallery.AI",
  "version": "1.1.0",
  "description": "Collect and organize your AI-generated images across platforms",
  "icons": {
    "16": "assets/icons/icon16.png",
    "32": "assets/icons/icon32.png",
    "48": "assets/icons/icon48.png",
    "128": "assets/icons/icon128.png"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "assets/icons/icon16.png",
      "32": "assets/icons/icon32.png",
      "48": "assets/icons/icon48.png",
      "128": "assets/icons/icon128.png"
    }
  },
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "permissions": [
    "storage",
    "tabs",
    "cookies",
    "activeTab",
    "scripting",
    "identity",
    "notifications"
  ],
  "host_permissions": [
    "https://*.main-gallery-ai.lovable.app/*",
    "https://accounts.google.com/*",
    "https://www.googleapis.com/*",
    "https://*.midjourney.com/*",
    "https://*.leonardo.ai/*",
    "https://*.openai.com/*",
    "https://*.stability.ai/*",
    "https://*.dreamstudio.ai/*",
    "https://*.runwayml.com/*",
    "https://*.pika.art/*",
    "https://*.krea.ai/*",
    "https://*.fluxlabs.ai/*",
    "https://*.hailuoai.video/*",
    "https://*.app.ltx.studio/*",
    "https://*.firefly.adobe.com/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://*.midjourney.com/*",
        "https://*.leonardo.ai/*",
        "https://*.openai.com/*",
        "https://*.stability.ai/*",
        "https://*.dreamstudio.ai/*",
        "https://*.runwayml.com/*",
        "https://*.pika.art/*",
        "https://*.krea.ai/*",
        "https://*.fluxlabs.ai/*",
        "https://*.hailuoai.video/*",
        "https://*.app.ltx.studio/*",
        "https://*.firefly.adobe.com/*"
      ],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "assets/icons/*", 
        "utils/*.js", 
        "auth/*.js", 
        "api/*.js"
      ],
      "matches": ["<all_urls>"]
    }
  ],
  "oauth2": {
    "client_id": "648580197357-2v9sfcorca7060e4rdjr1904a4f1qa26.apps.googleusercontent.com",
    "scopes": [
      "openid",
      "email",
      "profile"
    ]
  }
}


{
  "manifest_version": 3,
  "name": "MainGallery - AI Art Collector",
  "version": "1.0",
  "description": "Connect all your AI art platforms to Main Gallery with one click",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "permissions": [
    "activeTab",
    "storage",
    "identity",
    "notifications",
    "webNavigation"
  ],
  "host_permissions": [
    "https://*.midjourney.com/*",
    "https://*.openai.com/*",
    "https://*.dreamstudio.ai/*", 
    "https://*.runwayml.com/*",
    "https://*.pika.art/*",
    "https://*.leonardo.ai/*",
    "https://*.placeholder.com/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "content_scripts": [
    {
      "matches": [
        "https://*.midjourney.com/*",
        "https://*.openai.com/*",
        "https://*.dreamstudio.ai/*",
        "https://*.runwayml.com/*",
        "https://*.pika.art/*",
        "https://*.leonardo.ai/*"
      ],
      "js": ["content.js"]
    }
  ],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "web_accessible_resources": [
    {
      "resources": ["icons/*"],
      "matches": ["<all_urls>"]
    }
  ]
}

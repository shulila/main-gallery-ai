
{
  "manifest_version": 3,
  "name": "MainGallery - AI Art Collector",
  "version": "1.0",
  "description": "Connect all your AI art platforms to Main Gallery with one click",
  "permissions": [
    "activeTab",
    "storage",
    "identity",
    "notifications",
    "webNavigation"
  ],
  "host_permissions": [
    "https://*.midjourney.com/*",
    "https://*.openai.com/*",
    "https://*.dreamstudio.ai/*",
    "https://*.runwayml.com/*",
    "https://*.pika.art/*",
    "https://*.leonardo.ai/*"
  ],
  "action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": [
        "https://*.midjourney.com/*",
        "https://*.openai.com/*",
        "https://*.dreamstudio.ai/*",
        "https://*.runwayml.com/*",
        "https://*.pika.art/*",
        "https://*.leonardo.ai/*"
      ],
      "js": ["content.js"]
    }
  ],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  }
}

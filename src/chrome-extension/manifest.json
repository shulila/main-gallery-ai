
{
  "manifest_version": 3,
  "name": "MainGallery.AI",
  "version": "1.1.0",
  "description": "Collect and organize your AI-generated images across platforms",
  "permissions": [
    "storage",
    "activeTab",
    "scripting",
    "tabs",
    "notifications",
    "identity"
  ],
  "host_permissions": [
    "https://*.midjourney.com/*",
    "https://*.leonardo.ai/*",
    "https://*.openai.com/*",
    "https://*.stability.ai/*",
    "https://*.dreamstudio.ai/*",
    "https://*.runwayml.com/*",
    "https://*.pika.art/*",
    "https://*.discord.com/*",
    "https://*.playgroundai.com/*",
    "https://*.nightcafe.studio/*",
    "https://*.main-gallery-hub.lovable.app/*",
    "https://*.preview-main-gallery-ai.lovable.app/*"
  ],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "action": {
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    },
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": [
        "https://*.midjourney.com/*",
        "https://*.leonardo.ai/*",
        "https://*.openai.com/*",
        "https://*.stability.ai/*",
        "https://*.dreamstudio.ai/*",
        "https://*.runwayml.com/*",
        "https://*.pika.art/*",
        "https://*.discord.com/*",
        "https://*.playgroundai.com/*",
        "https://*.nightcafe.studio/*"
      ],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["bridge.js", "content-injection.js", "utils/*.js"],
      "matches": ["<all_urls>"]
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
